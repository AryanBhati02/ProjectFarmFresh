<%- include('../partials/header') %>

<section class="container" style="padding:40px 0; max-width:700px;">
  <h2>Add Product</h2>

  <form action="/admin/add" method="POST" style="margin-top:25px;">
    <label>Name</label>
    <input type="text" name="name" required class="form-input">

    <label>Price (â‚¹)</label>
    <input type="number" name="price" required class="form-input">

    <label>Category</label>
    <input type="text" name="category" required class="form-input">

    <label>Stock</label>
    <input type="number" name="stock" required class="form-input">

    <label>Image Path (Example: /images/milk.jpg)</label>
    <input type="text" name="image" required class="form-input">

    <label>Description</label>
    <textarea name="description" rows="4" class="form-input"></textarea>

    <button class="btn" style="margin-top:20px;">Add Product</button>
  </form>
</section>

