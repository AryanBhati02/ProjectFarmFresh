<%- include('../partials/header') %>

<section class="container" style="padding:40px 0;">
  <h2>Manage Products</h2>

  <a href="/admin/add" class="btn" style="margin:15px 0; display:inline-block;">Add Product</a>

  <table style="width:100%; border-collapse:collapse; margin-top:20px;">
    <thead>
      <tr style="background:#f0f0f0; border-bottom:1px solid #ccc;">
        <th style="padding:12px;">Image</th>
        <th style="padding:12px;">Name</th>
        <th style="padding:12px;">Price</th>
        <th style="padding:12px;">Category</th>
        <th style="padding:12px;">Stock</th>
        <th style="padding:12px;">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% products.forEach(p => { %>
        <tr style="border-bottom:1px solid #eee;">
          <td style="padding:10px;">
            <img src="<%= p.image %>" alt="" style="width:60px; height:60px; object-fit:cover; border-radius:6px;">
          </td>

          <td style="padding:10px;"><%= p.name %></td>
          <td style="padding:10px;">â‚¹<%= p.price %></td>
          <td style="padding:10px;"><%= p.category %></td>
          <td style="padding:10px;"><%= p.stock %></td>

          <td style="padding:10px;">
            <a href="/admin/edit/<%= p._id %>" class="btn" style="padding:6px 12px;">Edit</a>

            <form action="/admin/delete/<%= p._id %>" method="POST" style="display:inline;">
              <button class="btn" style="background:#b50000; padding:6px 12px; margin-left:5px; border:none;">
                Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
